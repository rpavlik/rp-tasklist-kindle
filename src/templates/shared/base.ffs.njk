#!/bin/sh
OTA=com.lab126.blanket.ota
LOCALSTORAGE=/mnt/us/extensions/{{shortName}}/bin/resource/LocalStorage/file__0.localstorage
DOCS="/mnt/us/documents/{{friendlyName}}"
INSTALLDIR="/mnt/us/extensions/{{shortName}}"
UPSTART="/etc/upstart/{{shortName}}_event_handler.conf"
{# Based on script included with Komic, made a template by Ryan Pavlik rpavlik #}

progress()
{
	lipc-send-event $OTA otaSplashProgress -i $1
	local x=48
	local y=11
	eips 0 $y "                                                ";
	eips $((($x - $(expr length "$2")) / 2)) $y "$2"
	sleep 3
}

fail()
{
	lipc-send-event $OTA otaSplashError -s "${1}"
	sleep 10
	exit 1;
}

